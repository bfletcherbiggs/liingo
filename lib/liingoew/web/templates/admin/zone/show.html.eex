<div class="panel panel-default" id="zone" data-zone-id="<%= @zone.id %>">
  <!-- Default panel contents -->
  <div class="panel-heading"><%= @zone.name %></div>
  <div class="panel-body">
    <%= @zone.description %>
    <h3>Member <%= @zone.type %>:</h3>
  </div>

  <!-- List group -->
  <ul class="list-group" id="zoneable-list">
    <%= for {id, name} <- @zone_members do %>
      <li data-zoneable-id="<%= id %>" class="list-group-item"><%= name %><button class="delete pull-right">X</button></li>
    <% end %>
  </ul>
  <div class="panel-footer">
    <select id="zoneable-select">
      <%= for zoneable <- @zoneables do %>
        <option value="<%= zoneable.id %>"><%= zoneable.name %></option>
      <% end %>
    </select>
    <button id="add" name="Add" class="btn btn-primary">Add</button>
    <div class="pull-right">
      <%= link "Edit", to: admin_zone_path(@conn, :edit, @zone), class: "btn btn-primary" %>
      <%= link "Back", to: admin_zone_path(@conn, :index), class: "btn btn-primary" %>
    </div>
  </div>
</div>
