.full.container.hero {
    width: 1200px;
    height: 400px;
    background-image: url('http://localhost:8080/static/images/home/homehero-music.jpg');
    background-repeat: no-repeat;
    text-align: center;
    color: white;
    background-position: center;
}


.full.container.hero .copy-container {
    padding-top: 170px;
    width: 100%;
    margin: auto;
}

.full.container.hero .copy-container h2 {
    letter-spacing: -.02em;
    font-size: 45px;
    font-weight: 700;
    line-height: 1.1em;
    text-shadow: 0px 2px 15px #775933;
}

.cat-header {
    font-size: 70px;
    letter-spacing: -.06em;
}

.cat-subtext {
    margin-top: 20px;
    padding-top: 10px;
    letter-spacing: .09em;
}

.cat-women {
    /* background-image: '../..'/images/home/model-women.jpg'); */
    /* width: 490px; */
    height: 290px;
    background-image: url('http://localhost:8080/static/images/home/category-portraits-1.jpg');
    background-repeat: no-repeat;
    background-position: top center;
}

.cat-women:hover {
    background-position: center -290px;
}


.cat-men {
    /* background-image: '../..'/images/home/model-men.jpg'); */
    /* width: 490px; */
    height: 290px;
    background-image: url('http://localhost:8080/static/images/home/category-portraits-1.jpg');
    background-repeat: no-repeat;
    background-position: center -580px;
}

.cat-men:hover {
    background-position: center -870px;
}

.container.genders {
    margin-top: 55px;
    margin-bottom: 37px;
    color: white;
    text-align: center;
}

.container.genders a {
    color: white;
}

.container.genders .cat-women, .container.genders .cat-men  {
    /* padding-top: 264px; */
    /* transition: all 0.6s ease; */
}


.container.genders .cat-women .cat-subtext, .container.genders .cat-men .cat-subtext {
    /* transition: all 0.6s ease; */
    display: none;
    opacity: 0;
}

.container.genders .cat-women .cat-header, .container.genders .cat-men .cat-header {
    transition: all 0.4s ease;
    margin-left: -25px;
    padding-top: 264px;
}

.popular-frames {
    text-align: center;
}

.popular-frames h2 {
    font-size: 28px;
}

.row.category {
    margin-bottom: 58px;
}

.second-hero {
    width: 1200px;
    height: 480px;
    background-color: white;
    background-image: url('http://localhost:8080/static/images/home/home-rescue-hemingway.jpg');
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
}

